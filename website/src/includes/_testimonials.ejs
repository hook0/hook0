                    <!-- Author -->
                    <div class="testimonial__author">
                        <div class="testimonial__avatar ring-2 ring-indigo-500/50">
                            <img src="customers/kieron-wiltshire.webp"
                                 alt="Kieron Wiltshire" width="48" height="48" loading="lazy" decoding="async" />
                        </div>
                        <div>
                            <div class="testimonial__name">Kieron Wiltshire</div>
                            <div class="testimonial__role">Senior Software Engineer</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
