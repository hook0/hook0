<a name="footer" id="footer"></a>
<footer class="bg-surface-primary border-t border-white/5" aria-labelledby="footer-heading">
    <h2 id="footer-heading" class="sr-only">Footer</h2>

    <!-- Main Footer Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-20">
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-12 lg:gap-8">
            <!-- Brand Column -->
            <div class="col-span-2 lg:col-span-1">
                <a href="/" class="flex items-center gap-3 group">
                    <div class="w-10 h-10 rounded-xl bg-white flex items-center justify-center">
                        <img src="./mediakit/logo/110x110-white.png" alt="Hook0" class="h-6 w-6 object-contain" />
                    </div>
                    <span class="text-white font-semibold text-lg">Hook0</span>
                </a>
                <p class="mt-4 text-sm text-gray-400 max-w-xs">
                    Open-Source Webhooks-as-a-Service. Built by developers for developers.
                </p>
                <div class="flex items-center gap-1 text-xs text-gray-500 mt-6">
                    <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full bg-surface-tertiary border border-white/5">
                        <%- include('../svg/europe-flag.svg') %>
                        Made in France
                    </span>
                </div>
            </div>

            <!-- About Column -->
            <div>
                <h3 class="text-sm font-semibold text-white uppercase tracking-wider mb-4"><%= locals.footerLinks.about.title %></h3>
                <ul role="list" class="space-y-3">
                    <% locals.footerLinks.about.items.forEach((item) => { %>
                    <li>
                        <a href="<%= item.href %>" class="text-sm leading-6 text-gray-400 hover:text-white transition-colors">
                            <%= item.label %>
                        </a>
                    </li>
                    <% }) %>
                </ul>
            </div>

            <!-- Guides Column -->
            <div>
                <h3 class="text-sm font-semibold text-white uppercase tracking-wider mb-4"><%= locals.footerLinks.guides.title %></h3>
                <ul role="list" class="space-y-3">
                    <% locals.footerLinks.guides.items.forEach((item) => { %>
                    <li>
                        <a href="<%= item.href %>" class="text-sm leading-6 text-gray-400 hover:text-white transition-colors inline-flex items-center gap-2">
                            <%- include('_icon-wrapper', { icon: item.icon }) %>
                            <%= item.label %>
                        </a>
                    </li>
                    <% }) %>
                </ul>
            </div>

            <!-- Developers Column -->
            <div>
                <h3 class="text-sm font-semibold text-white uppercase tracking-wider mb-4"><%= locals.footerLinks.developers.title %></h3>
                <ul role="list" class="space-y-3">
                    <% locals.footerLinks.developers.items.forEach((item) => { %>
                    <li>
                        <a href="<%= item.href %>" class="text-sm leading-6 text-gray-400 hover:text-white transition-colors inline-flex items-center gap-2">
                            <%- include('_icon-wrapper', { icon: item.icon }) %>
                            <%= item.label %>
                        </a>
                    </li>
                    <% }) %>
                </ul>
            </div>

            <!-- Community Column -->
            <div>
                <h3 class="text-sm font-semibold text-white uppercase tracking-wider mb-4"><%= locals.footerLinks.community.title %></h3>
                <ul role="list" class="space-y-3">
                    <% locals.footerLinks.community.items.forEach((item) => { %>
                    <li>
                        <a href="<%= item.href %>" target="_blank" class="text-sm leading-6 text-gray-400 hover:text-white transition-colors inline-flex items-center gap-2">
                            <%- include('_icon-wrapper', { icon: item.icon }) %>
                            <%= item.label %>
                        </a>
                    </li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-white/5">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="flex flex-col md:flex-row items-center justify-between gap-4">
                <!-- Copyright -->
                <div class="text-sm text-gray-500 text-center md:text-left">
                    <p>&copy; <%= new Date().getFullYear() %> Hook0. All rights reserved.</p>
                    <p class="mt-1">100% bootstrapped, no VCs. We are here to stay.</p>
                </div>

                <!-- Social Icons -->
                <div class="flex items-center gap-4">
                    <% locals.socialLinks.forEach((social) => { %>
                        <a href="<%= social.href %>" target="_blank" class="w-8 h-8 flex items-center justify-center rounded-lg text-gray-500 hover:text-white hover:bg-white/5 transition-all" title="<%= social.name %>">
                            <span class="sr-only"><%= social.name %></span>
                            <span class="w-6 h-6"><%- locals.social[social.icon.toLowerCase()]?.logo || locals.social[social.icon]?.logo %></span>
                        </a>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</footer>
