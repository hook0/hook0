<div class="relative bg-white py-16 sm:py-12 lg:py-16" id="features">
    <div class="mx-auto max-w-md px-4 text-center sm:max-w-3xl sm:px-6 lg:px-8 lg:max-w-7xl">
        <div class="text-center">
            <p class="mt-1 text-3xl font-extrabold text-gray-900 sm:text-5xl sm:tracking-tight lg:text-5xl">
                Out-Of-The-Box Webhooks</p>
        </div>
        <div class="mt-12">
            <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">

                <% locals.features.filter(f => f.primary).filter(f => f.primary).forEach(({
                                                                                              description,
                                                                                              title
                                                                                          }, i, arr) => { %>
                    <div class="pt-6">
                        <div class="flow-root bg-gray-50 rounded-lg px-6 pb-8">
                            <div class="-mt-6">
                                <div>
                  <span class="inline-flex items-center justify-center p-3 bg-indigo-500 rounded-md shadow-lg">
                    <%- include('../svg/cog-8-tooth.svg') %>
                  </span>
                                </div>
                                <h3 class="mt-8 text-lg font-medium text-gray-900 tracking-tight"><%= title %></h3>
                                <p class="mt-5 text-base text-gray-500"><%- description %></p>
                            </div>
                        </div>
                    </div>
                <% }) %>

            </div>
        </div>
    </div>

    <a name="features" id="features"></a>
    <div class="bg-white">
        <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:py-24 lg:px-8 lg:grid lg:grid-cols-3 lg:gap-x-8">
            <div>
                <h2 class="text-base font-semibold text-indigo-600 uppercase tracking-wide">Everything you need</h2>
                <p class="mt-2 text-3xl font-extrabold text-gray-900">All-in-one platform</p>
                <p class="mt-4 text-lg text-gray-500">Build a state of the art webhooks solution in minutes using
                    Hook0</p>
            </div>
            <div class="mt-12 lg:mt-0 lg:col-span-2">
                <dl class="space-y-10 sm:space-y-0 sm:grid sm:grid-cols-2 sm:grid-rows-<%= Math.floor(locals.features.filter(f => !f.primary).length / 2) + 1 %>  sm:gap-x-6 sm:gap-y-10 lg:gap-x-8">
                    <% locals.features.filter(f => !f.primary).forEach(({description, title, wip}, i, arr) => { %>
                        <div class="relative">
                            <dt>
                                <span>
                                  <% if (wip) { %>
                                      <%- include('../svg/clock.svg') %>
                                  <% } else { %>
                                      <%- include('../svg/check-green-features.svg') %>
                                  <% } %>
                                </span>

                                <p class="ml-9 text-lg leading-6 font-medium text-gray-900"><%= title %></p>
                            </dt>
                            <dd class="mt-2 ml-9 text-base text-gray-500">
                                <%= description %>
                            </dd>
                        </div>
                    <% }) %>
                </dl>
            </div>
        </div>
    </div>
</div>
