<a name="features" id="features"></a>
<section class="relative bg-surface-primary py-24 sm:py-32 overflow-hidden">
    <!-- Background Effects -->
    <div class="absolute inset-0 grid-pattern opacity-30"></div>
    <div class="blur-circle blur-circle--indigo w-96 h-96 top-0 right-0 opacity-20"></div>
    <div class="blur-circle blur-circle--green w-64 h-64 bottom-0 left-0 opacity-15"></div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="section__header animate-on-scroll">
            <span class="section__eyebrow">Features</span>
            <h2 class="section__title">Out-Of-The-Box Webhooks</h2>
            <p class="section__description">
                Everything you need to build a state-of-the-art webhooks solution in minutes
            </p>
        </div>

        <!-- Primary Features - Bento Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8 stagger-children">
            <% locals.features.filter(f => f.primary).forEach(({description, title}, i) => { %>
                <div class="animate-on-scroll card card--glow">
                    <div class="card__icon">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                  d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                  d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                    </div>
                    <h3 class="card__title"><%= title %></h3>
                    <p class="card__description"><%- description %></p>
                </div>
            <% }) %>
        </div>

        <!-- Secondary Features Section -->
        <div class="mt-24 lg:mt-32">
            <div class="lg:grid lg:grid-cols-12 lg:gap-16 items-start">
                <!-- Left Column - Header -->
                <div class="lg:col-span-4 animate-on-scroll animate-on-scroll--left">
                    <span class="section__eyebrow">Complete Solution</span>
                    <h3 class="text-display font-bold text-white mt-4">
                        All-in-one platform
                    </h3>
                    <p class="mt-4 text-body-lg text-gray-400">
                        Build a state-of-the-art webhooks solution in minutes using Hook0
                    </p>
                    <div class="mt-8">
                        <a href="<%= locals.meta.doc_guides %>" class="btn btn--secondary">
                            Explore all features
                            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                            </svg>
                        </a>
                    </div>
                </div>

                <!-- Right Column - Feature List -->
                <div class="lg:col-span-8 mt-12 lg:mt-0 animate-on-scroll animate-on-scroll--right">
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-8 gap-y-6">
                        <% locals.features.filter(f => !f.primary).forEach(({description, title, wip}, i) => { %>
                            <div class="relative flex gap-4 p-4 rounded-xl hover:bg-white/5 transition-colors group">
                                <div class="flex-shrink-0 mt-1">
                                    <% if (wip) { %>
                                        <div class="w-6 h-6 rounded-full bg-yellow-500/20 flex items-center justify-center">
                                            <svg class="w-4 h-4 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                            </svg>
                                        </div>
                                    <% } else { %>
                                        <div class="w-6 h-6 rounded-full bg-green-500/20 flex items-center justify-center">
                                            <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                            </svg>
                                        </div>
                                    <% } %>
                                </div>
                                <div>
                                    <h4 class="text-base font-medium text-white group-hover:text-indigo-300 transition-colors">
                                        <%= title %>
                                        <% if (wip) { %>
                                            <span class="ml-2 text-xs font-normal text-yellow-500">(Coming soon)</span>
                                        <% } %>
                                    </h4>
                                    <p class="mt-1 text-sm text-gray-500">
                                        <%= description %>
                                    </p>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
