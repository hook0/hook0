<!-- Header with glass morphism effect -->
<header id="main-header" class="fixed top-0 left-0 right-0 z-50 transition-all duration-300">
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-20">
            <!-- Logo -->
            <a href="/" class="flex items-center gap-3 group">
                <div class="w-10 h-10 rounded-xl bg-white flex items-center justify-center
                            transition-transform duration-300 group-hover:scale-110 group-hover:shadow-glow-indigo">
                    <img src="./mediakit/logo/110x110-white.png" alt="Hook0" class="h-6 w-6 object-contain" />
                </div>
                <span class="text-white font-semibold text-lg hidden sm:block">Hook0</span>
            </a>

            <!-- Desktop Navigation -->
            <div class="hidden md:flex items-center gap-1">
                <a href="/#how-it-works" class="btn btn--ghost">How it works</a>
                <a href="/#use_cases" class="btn btn--ghost">Use cases</a>
                <a href="/#pricing" class="btn btn--ghost">Pricing</a>
                <a href="https://documentation.hook0.com/" target="_blank" class="btn btn--ghost">
                    Documentation
                    <svg class="w-3.5 h-3.5 ml-1 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                </a>
            </div>

            <!-- Auth Buttons -->
            <div class="flex items-center gap-3">
                <a href="<%= locals.meta.contact %>" class="btn btn--ghost hidden sm:inline-flex">
                    Contact
                </a>
                <a href="<%= locals.meta.login %>" class="btn btn--ghost">
                    Login
                </a>
                <a href="https://app.hook0.com/register" class="btn btn--primary btn--sm" onclick="trackEvent('CTA', 'Click', 'header-get-started')">
                    Get Started
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                    </svg>
                </a>
            </div>

            <!-- Mobile Menu Button (hidden for now, can be expanded later) -->
            <button class="md:hidden p-2 text-gray-400 hover:text-white" aria-label="Menu" style="display: none;">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
    </nav>
</header>

<!-- Spacer for fixed header -->
<div class="h-20"></div>
